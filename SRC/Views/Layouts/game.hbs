<title>Jogo da velha</title>

<body>
    <div class="players">
        <h2  class="player" id="Your-User">  </h2>
        <h2  class="player" id="Rival-User">  </h2>
    </div>

    <div class="container">
        <div class="titleDiv">
            <h1 class="title">Tic Tac Toe</h1>
        </div>
            <div class="game">
                <button class="box" id="1"> </button>
                <button class="box" id="2"> </button>
                <button class="box" id="3"> </button>
                <button class="box" id="4"> </button>
                <button class="box" id="5"> </button>
                <button class="box" id="6"> </button>
                <button class="box" id="7"> </button>
                <button class="box" id="8"> </button>
                <button class="box" id="9"> </button>
            </div>
    </div>

    <dialog id="endGame">
        <div class="gameOptions" >
            <div class="userStatus">
                <h2 id="loserWinner">  </h2>

                <div id="userOptions">
                    <button onclick="newGame()" id="newGame"> Novo jogo </button>
                    <button onclick="resetGame()" id="resetGame"> Reiniciar</button>
                </div>

            </div>
        </div>

    </dialog>

</body>

